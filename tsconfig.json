{
  "compilerOptions": {
    // THIS MUST BE AT ROOT, if you set baseurl in sub-package it breaks intellisense jump to
    "baseUrl": ".",
    "rootDir": ".",
    "paths": {
      "tamagui": [
        "packages/tamagui"
      ],
      "tamagui-loader": [
        "packages/loader"
      ],
      "@tamagui/*": [
        "packages/*"
      ],
      "@tamagui/studio": [
        "apps/studio"
      ],
      "@takeout/*": [
        "takeout/*"
      ],
    },
    "outDir": "dist",
    "importHelpers": true,
    "allowJs": false,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "experimentalDecorators": false,
    "emitDecoratorMetadata": false,
    // this cant be used with module system.. but would be nice to have vscode auto-import type imports
    "verbatimModuleSyntax": false,
    "downlevelIteration": true,
    "strict": true,
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "preserveSymlinks": true,
    "jsx": "react-jsx",
    "module": "System",
    "moduleResolution": "node",
    "noEmitOnError": false,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "preserveConstEnums": true,
    // DONT DO THIS so jsdoc will remain
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": false,
    "strictNullChecks": true,
    "target": "es2020",
    "types": ["node", "react"],
    "lib": ["dom", "esnext"],
  },
  "exclude": ["test", "dist", "types", "**/__tests__"],
  "typeAcquisition": {
    "enable": true
  },
}
